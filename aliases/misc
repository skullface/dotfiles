#  Miscellaneous
#  ———————————————————————————————————————————————————————————————————————————

# youtube-dl 📼🖤
alias rip="yt-dlp"
alias ripVideo="yt-dlp -f 'bestvideo' --recode-video mp4"
alias ripAudio="yt-dlp -f 'bestaudio' --recode-video mp4"
alias subs="yt-dlp --recode-video mp4 --write-sub"

# Internet stuff=
alias flushdns="dscacheutil -flushcache && killall -HUP mDNSResponder"

# Navigation helpers
alias ..="cd .."
alias ls="ls -GFh"

# WHOIS lookup 🔍
# Use: `whois <domain.com>`
function whois() {
  command whois $(echo $1 | sed -e 's|https?://||' -e 's|/||g')
}
